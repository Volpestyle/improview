# ENV VARS
# optional (env var)
IMPROVIEW_ENV=dev
# optional (env var)
AWS_REGION=us-east-1
# optional (env var)
FRONTEND_BUILD_DIR=apps/web/dist
# optional (env var)
BASE_URL=
# optional (env var) — allows Lambda bootstrap to hydrate provider credentials locally
PROVIDER_SECRET_ARN=

# optional (env var) — populated automatically in CI via stack outputs
USER_POOL_ID=
# optional (env var) — populated automatically in CI via stack outputs
USER_POOL_CLIENT_ID=
# optional (env var) — comma-separated list, merged with USER_POOL_CLIENT_ID
USER_POOL_CLIENT_IDS=

# required (env var)
GOOGLE_CLIENT_ID=
# optional (env var)
GOOGLE_CLIENT_SCOPES="openid profile email"

# optional (env var)
OPENAI_BASE_URL=https://api.openai.com/v1
# optional (env var)
OPENAI_MODEL=gpt-4.1-mini
# optional (env var)
OPENAI_PROVIDER=OpenAI
# optional (env var)
OPENAI_TIMEOUT_SECONDS=25
# optional (env var)
OPENAI_TEMPERATURE=0.2

# optional (env var)
SMOKE_USER=smoke-tester@improview.dev
# optional (env var)
SMOKE_SECRET_NAME=improview/dev/smoke-credentials
# optional (env var)
SMOKE_SECRET_DESCRIPTION="Cognito smoke-test credentials"

# optional (env var)
VITE_API_BASE_URL=
# required for local dev (env var)
VITE_AUTH_DOMAIN=
# required for local dev (env var)
VITE_AUTH_CLIENT_ID=
# optional (env var)
VITE_AUTH_REDIRECT_URI=
# optional (env var)
VITE_AUTH_LOGOUT_REDIRECT_URI=
# optional (env var)
VITE_AUTH_SCOPE="openid profile email"
# optional (env var)
VITE_AUTH_IDENTITY_PROVIDERS=Google
# optional (env var)
VITE_AUTH_GOOGLE_PROVIDER=Google

# optional (env var)
AWS_ROLE_TO_ASSUME=

# SECRETS
# optional (secret)
VITE_AUTH_CLIENT_SECRET=
# required (secret)
GOOGLE_CLIENT_SECRET=
# optional (secret)
OPENAI_API_KEY=
# optional (secret)
GROK_API_KEY=
# optional (secret)
SMOKE_PASSWORD=
# optional (secret)
AWS_ACCESS_KEY_ID=
# optional (secret)
AWS_SECRET_ACCESS_KEY=
