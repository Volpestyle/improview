{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@improview/ui": ["packages/ui/src/index.ts"],
      "@improview/ui/*": ["packages/ui/src/*"]
    },
    "moduleDetection": "force",
    "allowJs": false,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
